# $Id$

# script file for FontForge for PDF samples creation
# usage:
#   mkdir samples
#   fontforge -script samples.pe *.sfd

if ($version < "20041012")
  Error("Your version of FontForge does not support PDF creation");
endif
i = 1
while ( i < $argc )
  Open($argv[i], 1)
  PrintSetup(5)
  PrintFont(0, 0, "", "samples/" + $fontname + ".pdf")
  i++
endloop
